{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "server/index.js"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "ALLOW-FROM https://kumii.africa" },
        { "key": "Content-Security-Policy", "value": "frame-ancestors 'self' https://kumii.africa https://*.lovable.app" }
      ]
    }
  ],
  "env": {
    "PORT": "3001"
  }
}
